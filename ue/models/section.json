  "models": [
    {
      "id": "section",
      "fields": [
{
      "component": "tab",
      "label": "Main",
      "name": "tab1"
    },
    {
          "component": "multiselect",
          "name": "style",
          "label": "Style",
          "options": [
            {
              "name": "Highlight",
              "value": "highlight"
            },
              {
              "name": "Center",
              "value": "center"
            },
              {
              "name": "Container",
              "value": "container"
            }         
            
          ]
        },
         {
          "component": "multiselect",
          "name": "background",
          "label": "Background Color",
          "options": [
            {
              "name": "Red",
              "value": "red"
            },
              {
              "name": "Black",
              "value": "black"
            },
              {
              "name": "Blue",
              "value": "blue"
            }         
            
          ]
        },
      {
        "component": "reference",
          "name": "image",
          "label": "Image",
          "multi": false
      
      },
      {
        "component": "boolean",
        "label": "Use Layout Mode",
        "name": "layoutmode",
        "valueType": "boolean"
      },
      {
        "component": "boolean",
        "label": "Hide in Mobile",
        "name": "hidemobile",
        "valueType": "boolean"
      },
    {
      "component": "tab",
      "label": "Layout",
      "name": "tab2",
        "condition": { "===": [{"var" : "bgimage"}, true] }
    }, 
      {
          "component": "number",
          "valueType": "number",
          "name": "grid",
          "label": "Desktop Grid Columns",
          "validation": {
            "numberMin": 1,
            "numberMax": 12,
            "customErrorMsg": "1 thru 12 columns"
          }
        },
         {
          "component": "number",
          "valueType": "number",
          "name": "gridtab",
          "label": "Tablet Grid Columns",
          "validation": {
            "numberMin": 1,
            "numberMax": 12,
            "customErrorMsg": "1 thru 12 columns"
          }
        },
         {
          "component": "number",
          "valueType": "number",
          "name": "gridmob",
          "label": "Mobile Grid Columns",
          "condition": { "===": [{"var" : "hidemobile"}, false] },
          "validation": {
            "numberMin": 1,
            "numberMax": 12,
            "customErrorMsg": "1 thru 12 columns"
          }
        },
         {
          "component": "select",
          "name": "gap",
          "label": "Gap",
          "options": [
             {
              "name": "X-Small",
              "value": "xs"
            },
             {
              "name": "Small",
              "value": "s"
            },
            {
              "name": "Medium",
              "value": "m"
            },
            {
              "name": "Large",
              "value": "l"
            },
            {
              "name": "X-Large",
              "value": "xl"
            },
            {
              "name": "XX-Large",
              "value": "xxl"
            }
          ]
        },
        {
          "component": "select",
          "name": "spacing",
          "label": "Spacing",
          "options": [
              {
              "name": "X-Small",
              "value": "xs"
            },
             {
              "name": "Small",
              "value": "s"
            },
            {
              "name": "Medium",
              "value": "m"
            },
            {
              "name": "Large",
              "value": "l"
            },
            {
              "name": "X-Large",
              "value": "xl"
            },
            {
              "name": "XX-Large",
              "value": "xxl"
            }
          ]
        }
      ]
    }
  ],
