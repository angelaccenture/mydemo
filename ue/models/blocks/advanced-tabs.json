{
  "definitions": [
    {
      "title": "Tabs",
      "id": "advanced-tabs",
      "model": "advanced-tabs",
      "filter": "advanced-tabs",
      "plugins": {
        "da": {
          "unsafeHTML": "<div class=\"advanced-tabs\"><div><ul><li>Tab 1</li><li>Tab 2</li><li>Tab 3</li></ul></div></div><div>Section One</div><div>Section Two</div><div>Section Three</div>",
          "fields": [
            {
              "name": "tablist-one",
              "selector": "div>div>li"
            },
            {
              "name": "tablist-two",
              "selector": "div>div>ul>li:nth-child(2)"
            }
          ]
        }
      }
    }
  ],
  "models": [
    {
      "id": "advanced-tabs",
      "fields": [
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Style",
          "options": [
           {
              "name": "Standard",
              "value": "standard"
            },
            {
              "name": "Blue Standard",
              "value": "bluestandard"
            }            
          ]
        },
         {
          "component": "number",
          "valueType": "number",
          "name": "tablistnumber",
          "required": true,
          "value": 1,
          "label": "Tab Items",
          "validation": {
              "numberMin": 1,
              "numberMax": 6,
              "customErrorMsg": "1 thru 6 tabs"
            }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "tablist-one",
          "label": "First Tab Name",
          "required": true,
          "condition": { "===": [{"var" : "tablistnumber"}, 1] 
          }
        },
         {
          "component": "text",
          "valueType": "string",
          "name": "tablist-two",
          "label": "Second Tab Name",
          "required": true,
          "condition": { "===": [{"var" : "tablistnumber"}, 2] 
          }
        }
      ]
    }
  ],
  "filters": [ {
      "id": "advanced-tabs",
      "components": [
      ]
    }]
}