{
  "definitions": [
    {
      "title": "Tabs",
      "id": "advanced-tabs",
      "model": "advanced-tabs",
      "filter": "advanced-tabs",
      "plugins": {
        "da": {
          "unsafeHTML": "<div class=\"advanced-tabs\"><div><ul><li>Tab 1</li><li>Tab 2</li><li>Tab 3</li></ul></div></div>",
          "fields": [
            {
              "name": "tablist",
              "selector": "div>div>ul"
            }
          ]
        }
      }
    }
  ],
  "models": [
    {
      "id": "advanced-tabs",
      "fields": [
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Style",
          "options": [
           {
              "name": "Standard",
              "value": "standard"
            },
            {
              "name": "Blue Standard",
              "value": "bluestandard"
            }            
          ]
        },
         {
          "component": "number",
          "valueType": "number",
          "name": "tablistnumber",
          "required": true,
          "label": "Tab Items",
          "validation": {
              "numberMin": 1,
              "numberMax": 6,
              "customErrorMsg": "1 thru 6 tabs"
            }
        },
        {
            "component": "text-input",
            "label": "Hidden text field",
            "name": "hidden-text",
            "valueType": "string",
            "condition": { "===": [{"var" : "tablistnumber"}, 1] 
          }
          },
          {
          "component": "richtext",
          "valueType": "string",
          "name": "tablist",
          "value": "",
          "label": "Tab List",
          "required": true
        }
      ]
    }
  ],
  "filters": [ {
      "id": "advanced-tabs",
      "components": [
      ]
    }]
}